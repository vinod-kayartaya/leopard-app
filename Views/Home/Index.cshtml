@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid py-4">
    <!-- Welcome Section -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold text-primary mb-3">Welcome to Admin Dashboard</h1>
            <p class="lead text-muted">
                A comprehensive employee management system designed to streamline your HR operations.
            </p>
        </div>
    </div>

    <!-- Features Section -->
    <div class="row g-4 py-3">
        <!-- Employee Management -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-people-fill text-primary fs-3 me-2"></i>
                        <h5 class="card-title mb-0">Employee Management</h5>
                    </div>
                    <p class="card-text">Efficiently manage your workforce with comprehensive employee profiles, status tracking, and detailed records.</p>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-lightning-fill text-warning fs-3 me-2"></i>
                        <h5 class="card-title mb-0">Quick Actions</h5>
                    </div>
                    <p class="card-text">Access frequently used features instantly: add new employees, update records, and generate reports.</p>
                </div>
            </div>
        </div>

        <!-- Data Security -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-shield-lock-fill text-success fs-3 me-2"></i>
                        <h5 class="card-title mb-0">Data Security</h5>
                    </div>
                    <p class="card-text">Rest assured with our secure data management system, ensuring your employee information remains protected.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Start Section -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card border-0 bg-light">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-rocket-takeoff me-2"></i>
                        Quick Start
                    </h5>
                    <p class="card-text">Get started with these common tasks:</p>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-primary w-100">
                                <i class="bi bi-list-ul me-2"></i>
                                View Employee List
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a asp-controller="Employee" asp-action="Create" class="btn btn-outline-success w-100">
                                <i class="bi bi-person-plus me-2"></i>
                                Add New Employee
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 